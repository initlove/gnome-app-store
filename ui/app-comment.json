{
  "Info preview" : {
    "id" : "app-comment", 
    "type" : "ClutterGroup",
    "width" : 400,
    "reactive" : true,
    "children" : [
      {
        "id" : "usericon",
        "type" : "ClutterTexture",
        "width" : 36,
        "height" : 36,
	"filename" : "person.png",
	"x" : 2,
	"y" : 10,
    	"reactive" : true
      },
      {
        "id" : "subject",
        "type" : "ClutterText",
	"x" : 40,
	"y" : 10,
        "font-name" : "Sans Bold 14px",
        "color" : "black",
        "line-alignment" : "start",
        "line-wrap" : false,
        "ellipsize" : "end"
      },
      {
        "id" : "user",
        "type" : "ClutterText",
	"x" : 48,
	"y" : 30,
        "font-name" : "Sans 12px",
        "color" : "gray",
        "line-alignment" : "start",
        "line-wrap" : false,
        "ellipsize" : "end"
      },
      {
        "id" : "date",
        "type" : "ClutterText",
	"x" : 140,
	"y" : 30,
	"width" : 120,
        "font-name" : "Sans 12px",
        "color" : "gray",
        "line-alignment" : "start",
        "line-wrap" : false,
        "ellipsize" : "end"
      },
      {
        "id" : "reply-box",
        "type" : "ClutterBox",
        "x" : 10,
        "y" : 60,
        "layout-manager" : {
                "type" : "ClutterBoxLayout" ,
                "vertical" : true,
                "spacing" : 10
        },
        "children" : [
      	      {
	        "id" : "text",
        	"type" : "ClutterText",
		"width" : 350,
        	"font-name" : "Sans 12px",
	        "color" : "black",
        	"line-alignment" : "start",
	        "line-wrap" : true,
        	"ellipsize" : "none"
	      },
              {
                "id" : "reply-entry",
                "type" : "GnomeAppText",
                "text-font-name" : "Sans 16px",
                "text-color" : "black",
                "width" : 320,
                "reactive" : true
              },
      	      {
	        "id" : "reply-button-box",
	        "type" : "ClutterBox",
        		"layout-manager" : {
	                "type" : "ClutterBoxLayout" ,
                	"spacing" : 100
		        },
	        "children" : [
      		      {
                	"id" : "submit-button",
	                "type" : "GnomeAppButton",
        	        "text" : "Submit",
                	"text-font-name" : "Sans 16px",
	                "text-color" : "black",
        	        "reactive" : true,
                	"signals" : [
	                  { "name" : "button-press-event", "handler" : "on_submit_button_press" }
        	        ]
	              },
      		      {
                	"id" : "reply-button",
	                "type" : "GnomeAppButton",
        	        "text" : "Reply",
                	"text-font-name" : "Sans 16px",
	                "text-color" : "black",
        	        "reactive" : true,
                	"signals" : [
	                  { "name" : "button-press-event", "handler" : "on_reply_button_press" }
        	        ]
	              }
		]
	      }
	]
      }
    ]
  }
}
